include mixins/achievement.jade
include mixins/header.jade

doctype html
html
  +header( 'Collection  ' + collection.title + " by " + collection.owner.username )

  p
    a(href='/user/' + collection.owner.id)
      img(src='/icon/' + (collection.owner.avatar || 2) title=collection.owner.username)
  h1= collection.title
  p= collection.description

  ul
    for a in collection.achievements
      li
        a(href='/achievement/'+a.id)
          +achievement(a)
    if collection.editable
      p
        a(href='' onClick="newAchievement( '" + collection.id + "' ); return false;") +
      #new(style="display:none;")
        +achievement( {} )

  +footer

mixin achievement(a)
  .achievement
    .have
      img.icon(src='/icon/' + (have_icon || 1))
      .text
        .title= a.title
        .description= a.description
    .need
      img.icon(src='/icon/' + (need_icon || 0))
      .text
        .title= a.title
        .description= a.description
    if a.editable
      .edit
        img.icon(src='/icon/' + (need_icon || 0))
        .text
          input.title= a.title
          input.description= a.description


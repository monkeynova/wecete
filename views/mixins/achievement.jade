mixin achievement(a)
  .achievement(id='Achievement-' + a.id achievementId=a.id)
    form
      .view
        if a.editable
          button.editAchievement Edit
        .have
          img.icon(src='/icon/' + (have_icon || site.defaultHave))
          .text
            .title= a.title
            .description= a.description
        .need
          img.icon(src='/icon/' + (need_icon || site.defaultNeed))
          .text
            .title= a.title
            .description= a.description
      if a.editable
        .edit
          button.saveAchievement(tabindex=5) Save
          .have
            img.icon(src='/icon/' + (have_icon || site.defaultHave))
            .text
              .title
                input.title(name=title value=a.title size=30 tabindex=1)
              .description
                input.description(name=description value=a.description size=80 tabindex=2)
          .need
            img.icon(src='/icon/' + (need_icon || site.defaultNeed))
            .text
              .title
                input.title(name=title value=a.title size=30 tabindex=3)
              .description
                input.description(name=description value=a.description size=80 tabindex=4)

